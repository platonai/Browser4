{
  "name": "pulsar-mock-site-node",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js implementation of MockSiteApplication for pulsar-tests-common (Express server for test endpoints)",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development node src/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "lint": "echo 'No linter configured'"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "express": "^4.19.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "jsdom": "^24.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/test"],
    "moduleFileExtensions": ["js","mjs"],
    "collectCoverage": false
  }
}
